{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-O3",                          // Enable maximum optimization
                "-march=native",                // Optimize for your specific CPU
                "-std=c++17",                   // Use C++17 standard
                "${file}",                      // Input file
                "-o",                           // Output flag
                "${fileDirname}\\${fileBasenameNoExtension}.exe" // Output executable name
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}